{
  "meta": {
    "appKey": "tasty-customers",
    "displayName": "Tasty Customers",
    "version": "2.0.0",
    "icon": "üçî",
    "description": "Manage catering orders, customer profiles, and menus.",
    "tags": ["catering", "sales"]
  },
  "connection": {
    "productionUrl": "https://api.tastyfresh.com/v1",
    "stagingUrl": "https://staging-api.tastyfresh.com/v1",
    "localUrl": "http://localhost:1234",
    "auth": {
      "type": "jwt-bearer",
      "tokenSource": "adminator-context"
    }
  },
  "layout": {
    "type": "dashboard-grid",
    "sections": [
      {
        "title": "Quick Actions",
        "widgets": [
          {
            "type": "action-buttons",
            "items": [
              { "label": "New Order", "action": "open-modal", "target": "create-order-form", "icon": "plus" },
              { "label": "Sync Menu", "action": "api-trigger", "endpoint": "/menu/sync", "icon": "refresh" }
            ]
          }
        ]
      },
      {
        "title": "Overview",
        "widgets": [
          {
            "type": "markdown",
            "content": "Welcome to the **Tasty Customers** management portal.\n\n* **Orders**: View and process incoming catering requests.\n* **Customers**: Manage client details and history."
          },
          {
            "type": "stats-card",
            "title": "Pending Orders",
            "dataSource": { "endpoint": "/orders/stats", "field": "pendingCount" }
          }
        ]
      }
    ]
  },
  "resources": [
    {
      "id": "customers",
      "name": "Customers",
      "endpoint": "/customers",
      "schema": {
        "fields": [
          { "name": "id", "type": "number", "readonly": true },
          { "name": "firstName", "type": "text", "required": true },
          { "name": "lastName", "type": "text", "required": true },
          { "name": "email", "type": "email", "required": true },
          { "name": "status", "type": "select", "options": ["active", "inactive", "banned"] }
        ]
      },
      "views": {
        "list": {
          "columns": ["id", "firstName", "lastName", "email", "status"],
          "actions": ["edit", "delete"]
        },
        "edit": {
          "layout": "form"
        }
      }
    }
  ]
}
